@using Proiect_IR.ViewModels
@model Product


<h1>Are you sure you want to delete this post?</h1>

<form method="post" asp-action="Delete"  enctype="multipart/form-data">
    <input type="hidden" value="AddressId" id="AddressId" />
   

    <div class="form-group">
        <label asp-for="ProductName">ProductName:</label>
        <input asp-for="ProductName" class="form-control" placeholder="ProductName">
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductDescription">ProductDescription:</label>
        <input asp-for="ProductDescription" class="form-control" placeholder="Description">
        <span asp-validation-for="ProductDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductPrice">ProductPrice:</label>
        <input asp-for="ProductPrice" class="form-control" placeholder="ProductPrice">
        <span asp-validation-for="ProductPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductCategory">ProductCategory:</label>
        <input asp-for="ProductCategory" class="form-control" placeholder="ProductCategory">
        <span asp-validation-for="ProductCategory" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductImage">ProductImage:</label>
        <input asp-for="ProductImage" type="file" class="form-control" placeholder="Image">
        <span asp-validation-for="ProductImage" class="text-danger"></span>
    </div>
    </form>
    <div class="form-group">
        <form action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
        </form>
     </div>

